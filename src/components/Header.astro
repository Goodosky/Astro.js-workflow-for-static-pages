---
import Offcanvas from "@components/Offcanvas.astro";
import NavCollapse from "@partials/NavCollapse.astro";

const navbarBreakpoint = "lg";
---

<header class="container flex relative z-50 items-center justify-between py-4">
  <a class="text-3xl logo" href="/">LOGO</a>
  <nav>
    <Offcanvas title="Menu" breakpoint={navbarBreakpoint}>
      <!-- Sidebar content -->
      <ul
        class={`gap-3 lg:gap-7 flex ${navbarBreakpoint}:items-center max-lg:flex-col [&_a]:animated-underline [&_a]:text-lg`}>
        <li><a href="#">Link 1</a></li>
        <li><a href="#">Link 2</a></li>
        <li><a href="#">Link 3</a></li>
        <NavCollapse title="NavCollapse" breakpoint={navbarBreakpoint}>
          <li><a href="#">Collapse Link 1</a></li>
          <li><a href="#">Collapse Link 2</a></li>
          <li><a href="#">Collapse Link 3</a></li>
        </NavCollapse>
        <li><a href="#">Link 5</a></li>
      </ul>
    </Offcanvas>
  </nav>
</header>

